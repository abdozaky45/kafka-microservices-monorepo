{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
 "paths": {
  "@admin/*": ["services/admin-system/src/*"],
  "@user/*": ["services/user-system/src/*"],
  "@notification/*": ["services/notification-system/src/*"],
  "@shared/kafka": ["services/shared/kafka/src/index.ts"],
},
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
